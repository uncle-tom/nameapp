<p id="notice"><%= notice %></p>

<h1>Listing Photo Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_images.each do |photo_image| %>
      <p><%= photo_image.name %></p>
      <tr>        
        <td><%= link_to 'Show', photo_image %></td>
        <td><%= link_to 'Edit', edit_photo_image_path(photo_image) %></td>
        <td><%= link_to 'Destroy', photo_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo image', new_user_album_photo_image_path(current_user, @album) %>

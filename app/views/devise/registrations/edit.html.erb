<h2>Редактировать профиль <%= current_user.first_name %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label 'Аватарка' %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label 'Имя' %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label 'Телефон' %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label 'Город' %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label 'Сайт' %><br />
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label 'Новый пароль' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'Подтвердите пароль' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'Текущий пароль' %> <i>(чтобы изменения вступили в силу - введите свой текущий пароль)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить", class: 'btn btn-primary' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to "Назад", :back %>
